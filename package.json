{
  "license": "MIT",
  "private": true,
  "workspaces": [
    "DistributionPackages/*"
  ],
  "devDependencies": {
    "@sitegeist/es-neos-stylelint": "^2.0.2",
    "@sitegeist/eslint-config-es-neos-eslint": "^2.0.2",
    "@types/css-minimizer-webpack-plugin": "^1.1.3",
    "@types/expect-puppeteer": "^4.4.5",
    "@types/jest": "^26.0.22",
    "@types/jest-environment-puppeteer": "^4.4.1",
    "@types/mini-css-extract-plugin": "^1.2.3",
    "@types/node": "^14.14.36",
    "@types/puppeteer": "^5.4.3",
    "@types/terser-webpack-plugin": "^5.0.3",
    "autoprefixer": "^10.2.5",
    "browserslist": "^4.16.3",
    "concurrently": "^6.2.0",
    "css-loader": "^5.2.0",
    "css-minimizer-webpack-plugin": "^1.3.0",
    "eslint": "^7.22.0",
    "glob": "^7.1.6",
    "jest": "^26.6.3",
    "jest-puppeteer": "^5.0.4",
    "lerna": "^4.0.0",
    "mini-css-extract-plugin": "^1.3.9",
    "node": "^15.10.0",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "postcss-custom-media": "^8.0.0",
    "postcss-discard-duplicates": "^4.0.2",
    "postcss-loader": "^5.2.0",
    "postcss-media-minmax": "^5.0.0",
    "postcss-mixins": "^7.0.3",
    "postcss-modules": "^4.0.0",
    "precss": "^4.0.0",
    "puppeteer": "^10.0.0",
    "stylelint": "^13.12.0",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.7.0"
  },
  "scripts": {
    "cleanup:node": "find . -name 'node_modules' -type d -prune -print -exec rm -rf '{}' \\;",
    "build": "lerna run --parallel --stream build",
    "watch": "lerna run --parallel --stream watch",
    "test": "lerna run --stream test",
    "lint:css": "stylelint 'DistributionPackages/*/Resources/Private/**/*.css'",
    "lint:js": "eslint 'DistributionPackages/*/Resources/Private/**/*.ts'",
    "postinstall": "lerna bootstrap"
  },
  "browserslist": [
    ">1%",
    "not dead",
    "not IE 11",
    "not IE_Mob 11"
  ],
  "eslintConfig": {
    "extends": [
      "@sitegeist/es-neos-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "globals": {
      "page": "readonly",
      "createFusionComponentUri": "readonly"
    },
    "overrides": [
      {
        "files": [
          "**/*.spec.ts",
          "**/*.spec.tsx"
        ],
        "rules": {
          "@typescript-eslint/func-call-spacing": [0],
          "no-unexpected-multiline": [0]
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "@sitegeist/es-neos-stylelint"
    ],
    "rules": {
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind"
          ]
        }
      ]
    }
  },
  "name": "sitegeist-neos-base-distribution"
}
